<?xml version="1.0" encoding="utf-8"?>

<!--Created by Marilyn Florek for the Placeholder java file-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollEVERYTHING"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            layout="@layout/toolbar"/>

        <TextView
            android:id="@+id/txtView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:inputType="phone"
            android:text="@string/yourRecipe"
            android:textColor="@color/colorAccent"
            android:textSize="33sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/recipeURL"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button"
                android:text="Cook It!"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <com.example.ciyguide.ciyguide.dummy.ScrollyScrolly
                android:id="@+id/showMe"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipeURL"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/first_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="Full Recipe (touch to expand)"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/inside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editText2"
                android:inputType="phone"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:text="@string/sendGrocery"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_above="@+id/btnSendSMS"
                    android:layout_below="@+id/editText"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:hint="@string/message"
                    android:maxLines="1"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnSendSMS"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/editText2"
                    android:background="@drawable/button"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:text="Send Txt"
                    android:textStyle="bold" />
            </GridLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/second_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:padding="20dp"
            android:text="What You Need"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
        <LinearLayout
            android:id="@+id/insideNEED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sendGrocery"
                android:inputType="phone"
                android:textColor="@color/colorAccent"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/txtViewNEED"
                android:layout_above="@+id/editText2NEED"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText2NEED"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/btnSendSMSNEED"
                    android:layout_below="@+id/editTextNEED"
                    android:hint="@string/message"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Send Txt"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:textStyle="bold"
                    android:background="@drawable/button"
                    android:id="@+id/btnSendSMSNEED"
                    android:layout_below="@+id/editText2NEED"/>
            </GridLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
