<?xml version="1.0" encoding="utf-8"?>

<!--Created by Marilyn Florek for the Placeholder java file-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/txtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_gravity="center_horizontal"
        android:inputType="phone"
        android:text="@string/yourRecipe"
        android:textColor="@color/colorAccent"
        android:textSize="33sp"
        android:textStyle="bold" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/recipeURL"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button"
            android:text="Cook It!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/editText2"
        android:layout_gravity="center_horizontal"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/first_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Full Recipe (touch to expand)"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp" />
    <LinearLayout
        android:id="@+id/inside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sendGrocery"
            android:inputType="phone"
            android:textColor="@color/colorAccent"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/txtView"
            android:layout_above="@+id/editText2"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_above="@+id/btnSendSMS"
                android:layout_below="@+id/editText"
                android:hint="@string/message"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:textColor="@color/black" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="Send Txt"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:textStyle="bold"
                android:background="@drawable/button"
                android:id="@+id/btnSendSMS"
                android:layout_below="@+id/editText2"/>
        </GridLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/second_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:padding="20dp"
        android:text="What You Need"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp" />
    <LinearLayout
        android:id="@+id/insideNEED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sendGrocery"
            android:inputType="phone"
            android:textColor="@color/colorAccent"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/txtViewNEED"
            android:layout_above="@+id/editText2NEED"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText2NEED"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_above="@+id/btnSendSMSNEED"
                android:layout_below="@+id/editTextNEED"
                android:hint="@string/message"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:textColor="@color/black" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="Send Txt"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:textStyle="bold"
                android:background="@drawable/button"
                android:id="@+id/btnSendSMSNEED"
                android:layout_below="@+id/editText2NEED"/>
        </GridLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>
